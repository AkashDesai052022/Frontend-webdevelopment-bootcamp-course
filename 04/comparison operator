<!DOCTYPE html>
  <html>
  <head>
  </head>
  <body>
      <h2>Comparison Operator</h2>
      == equal operator 
      === strict equal operator
      != not equal operator
      !== strict not equal operator
      > greater than operator
      < less than operator
      >= greater than equal operator
      <= less than equal operator

    <script>
      let a = 20;
        let b = 20;
        let c = "20";
        let d = 30;

        console.log(a == b);  // true
        console.log(a === b);  // true
        console.log(a == c);  // true
        console.log(a === c);  // false
        
        // here triple equal operator checks value and type of values 

        console.log(a != d);  // true 
        console.log(a != b);  // false 
        console.log(a !== c);  // true 

        // this is expample of ternary operator 
        const result = 20 === 20 ? "values match" : "values do not match";

        if(20 === 20) {
            return "values match";
        } else {
            return "values do not match";
        }

        // logical operator 
        // && || ! 

        let isTrue;
        if (10 === 10 && 20 === 20){
            isTrue = "true";
        } else {
            isTrue = "false";
        }
        // with this operator both side of operator should be true 

        if (10 === 10 || 10 === 13) {
            isTrue = "true";
        } else {
            isTrue = "false";
        }
        // either one side of symbol should be true 
        // ! is known as negation of value 

        // !(10 === 10) ==> false 

    </script>
  </body>
  </html>
